@model DPGERJ.Recepcao.Web.ViewModels.VisitaViewModel

@{
    ViewBag.Title = "Cadastro";
}

<h3>Cadastro de entrada de visitante</h3>


@using (Html.BeginForm("Cadastro", "Visita", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Hidden("assistidoImagem");
    @Html.HiddenFor(model => model.AssistidoId)
    @Html.AntiForgeryToken()
    <div class="well well-sm">
        <div class="row">
            <div class="col-md-5">

                <h4><b>Visitante</b> @Model.Assistido.Nome</h4>
                <img src="@Url.Content($"~/Content/fotos/{Model.Assistido.ImagemUrl}")" class="img img-thumbnail" alt="foto do visitante" width="320" height="240" />
                <p><b>Documento</b> @Model.Assistido.Documento</p>
                <p>
                    @Html.ActionLink("Alterar Foto", "Editar", "Assistido", new { Model.Assistido.Documento }, new { @class = "btn btn-sm btn-warning" })
                </p>
            </div>


            <div class="col-md-7">
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <p class="lead">@DateTime.Now.ToString("F")</p>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DestinoId, "Destino", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("DestinoId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DestinoId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PessoaMotivo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PessoaMotivo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PessoaMotivo, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar entrada" class="btn btn-sm btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
}

<div>
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-sm btn-info" })
</div>
@section scripts
{

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}
